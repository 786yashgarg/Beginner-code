#include <bits/stdc++.h>
using namespace std;

int main() {
	       int t;
	       cin>>t;
	       while(t>0)
	       {t--;
	       int x,y,z;
	       cin>>x>>y>>z;
	       int p= y-x;
	       if(p<=2*z)
	       cout<<"yes"<<endl;
	       else
	       cout<<"no"<<endl;}
	       return 0;
	       

}
